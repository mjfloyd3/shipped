<%= form_with(model: job, local: true) do |form| %>

<div id="description"
  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description, id: :job_description %></div>
  </div>

  <div class="field">
    <%= form.label :containers %>
    <%= form.number_field :containers, id: :job_containers %>
  </div>

<div id="toandfrom">
  <div class="field" >
    <%= form.label :Origin %>
    <%= form.collection_select :location_id, Location.all, :id, :name %>
  </div>

  <div class="field" >
    <%= form.label :Destination %>
    <%= form.collection_select :location_id, Location.all, :id, :name %>
  </div>
</div>

  <div class="field" >
    <%= form.label :cost %>
    <%= form.number_field :cost %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>