<%= form_with(model: job, local: true) do |form| %>


  <div class="field">
    <%= form.label :Description %>
    <%= form.text_field :description, id: :job_description %>
  </div>

  <div class="field">
    <%= form.label :Containers %>
    <%= form.number_field :containers, id: :job_containers %>
  </div>

  <div class="field" >
    <%= form.label :Origin %>
    <%= form.collection_select :origin, Location.all, :name, :name %>
  </div>

  <div class="field" >
    <%= form.label :Destination %>
    <%= form.collection_select :destination, Location.all, :name, :name %>
  </div>


  <div class="field" >
    <%= form.label :Cost %>
    <%= form.number_field :cost %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
