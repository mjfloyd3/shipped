<div id="h2container"><h2>Jobs</h2></div>

<% @jobs.each do |job| %>
    <%= job.id %>.
    <%= job.name %>

    <table class="table">
        <thead>
            <tr>
                <th>Description</th>
                <th>Origin</th>
                <th>Destination</th>
                <th>Containers</th>
                <th>Cost</th>
                <th>Boat</th>
            </tr>
        </thead>
        <tbody>
            <tr>
            <td><%= job.description %></td>
            <td><%= job.origin %></td>
            <td><%= job.destination %></td>
            <td><%= job.containers %></td>
            <td><%= job.cost %></td>
        </tr>
            </tbody>
                    </table>
  
<% end  %>


<center><%= link_to 'New Job', new_job_path %></center>         
