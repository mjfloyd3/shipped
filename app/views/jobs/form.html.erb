<%= form_with(model: jobs, local: true) do |form| %>


  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :boat_name %>
  </div>

  <div class="field">
    <%= form.label :containers %>
    <%= form.number_field :containers, id: :boat_containers %>
  </div>

  <div class="field" >
    <%= form.label :Origin %>
    <%= form.collection_select :location_id, Location.all, :id, :name %>
  </div>

  <div class="field" >
    <%= form.label :Destination %>
    <%= form.collection_select :location_id, Location.all, :id, :name %>
  </div>

  <div class="field" >
    <%= form.label :cost %>
    <%= form.number_field :cost %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>